<div class="contents" >
  <div class="mypage">
    <div class="avatar-img"><%= image_tag(@user.avatar, :width => "100" )%></div>
    <p><%= @user.nickname %></p>
    <a href="/temples/<%= @user.nikkis.last.temple_id %>/" ><span class="place"><small><%= Temple.find(@user.nikkis.last.temple_id).temple_name %>ã€€<%= @user.nikkis.last.created_at.strftime("%Y/%m/%d") %></small></span></a>
  </div>
  <% @user.nikkis.each do |nikki| %>
  <div class="content_post">
  <div class="avatar-img"><%= image_tag(@user.avatar, :width => "100" )%></div>
   <span class="nickname"><%= @user.nickname %></span>
   <a href="/temples/<%= nikki.temple.id %>/" title="<%= nikki.temple.temple_name %>"><span class="place"><%= nikki.temple.temple_name %></span></a>
