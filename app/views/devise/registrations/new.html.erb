<div class="contents">
     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
     <%= devise_error_messages! %>
     <h2>新規登録</h2>
     <div class="registration">
          <div class="label">
               <%= f.label :'メールアドレス' %><br />
          <%= f.email_field :email, autofocus: true, :placeholder => 'メールアドレスを入力' %></div>
          <div class="label">
               <%= f.label :'パスワード' %>
               <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
          <%= f.password_field :password, autocomplete: "off", :placeholder => 'パスワードを入力' %></div>
          <div class="label">
               <%= f.label :'パスワード確認' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", :placeholder => 'パスワードを入力（確認）' %></div>
          <div class="label">
               <%= f.label :'ニックネーム' %><br />
          <%= f.text_field :nickname, autofocus: true, :placeholder => 'ニックネームを入力' %></div>
          <div class="field">
               <%= f.label :'プロフィール画像' %><br />
               <%= f.file_field :avatar %>
          </div>
          <div class="submit">
               <div class="actions">
                    <%= f.submit "登録" %>
               </div>
          </div>
          <div class="more_link_box">
               <strong>すでにアカウントを持っていますか？</strong>
               <%= render "devise/shared/links" %>
          </div>
     </div>
     <% end %>
</div>
